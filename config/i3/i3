# primary i3bar
bar {
    position bottom
    output primary
    tray_output primary
    tray_padding 9
    strip_workspace_numbers yes
    status_command i3blocks
    # i3bar_command i3bar --transparency
    colors {
        background $bg
        statusline $bg
        separator  $bg
        focused_workspace  $bg $bg $fg0
        active_workspace   $bg $bg $fg3
        inactive_workspace $bg $bg $fg3
        urgent_workspace   $bg $bg $fg1
    }
    padding 6px 7px 6px 10px
}
# secondary i3bar
bar {
    position bottom
    output nonprimary
    tray_output none
    strip_workspace_numbers yes
    status_command i3blocks
    # i3bar_command i3bar --transparency
    colors {
        background $bg
        statusline $bg
        separator  $bg
        focused_workspace  $bg $bg $fg0
        active_workspace   $bg $bg $fg3
        inactive_workspace $bg $bg $fg3
        urgent_workspace   $bg $bg $fg1
    }
    padding 6px 7px 6px 10px
}

