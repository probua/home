# probua-theme
function git_branch {
	git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/'
}

function markup_git_branch {
	if [[ "x$1" == "x" ]]; then
		echo -e "$1"
	else
		if [[ $(git status -s) == "" ]]; then
			echo -e 'git:'"$1"
		else
			echo -e 'git:''\033[0;38;5;210m'"$1"'\033[0m'
		fi
	fi
}

PS1='\[\e[0;38;5;222m\]\u@\h \[\e[0;38;5;39m\]\w \[\e[0m\]$(markup_git_branch $(git_branch))
\[\e[0;38;5;222m\]> \[\e[0m\]'

